{
  "manifest_version": 2,
  "name": "Linguee it!",
  "version": "0.3.1",
  "background": {
    "scripts": ["popup/background.js"]
  },

  "description": "Displays words and sentences translation using Lingueeâ„¢.",
  "homepage_url": "https://github.com/renanbr/linguee-it",
  "icons": {
    "48": "icons/linguee-48.png",
    "96": "icons/linguee-96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Send a 'toggle-feature' event"
    }
  },

  "browser_action": {
    "default_icon": "icons/linguee-32.png",
    "default_title": "Linguee it!",
    "default_popup": "popup/index.html"
  }
}
